<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">

    <!-- Main content view -->
    <RelativeLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false">

        <include layout="@layout/toolbox"/>

        <ImageView
                android:id="@+id/camera_touchpad"
                android:src="@drawable/controller"
                style="@style/touchpad"
                android:contentDescription="@string/touchpad_description"/>
    </RelativeLayout>

    <!-- Navigation drawer -->
    <ListView
            android:id="@+id/navigation_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#FFF"
            tools:listitem="@layout/drawer_list_item"/>

</android.support.v4.widget.DrawerLayout>