<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#eee"
            android:focusableInTouchMode="false" android:baselineAligned="false"
            android:orientation="horizontal">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.5">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="#FFF"
                android:layout_weight="1">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    >
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="12">
                    </LinearLayout>
                    <Switch
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/auto_focus"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="25dp"
                            android:textSize="16dp"
                            android:id="@+id/switch2"
                            android:layout_weight="1"
                            android:layout_marginRight="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    >

                <!-- when clicked call the autoFocus function -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">
                    </LinearLayout>
                    <Button
                            android:text="@string/force_auto_focus"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:textSize="16dp"
                            android:id="@+id/autoFocus"
                            android:layout_weight="1"/>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1.2">
                    </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2">
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    >
                <TextView
                        android:id="@+id/textSeekBar1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/manual_focus"
                        android:textSize="16dp"
                        android:gravity="center"
                        />
                <SeekBar
                        android:id="@+id/seekBar1"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:minHeight="140dp"
                        android:maxHeight="140dp"
                        android:layout_width="match_parent"
                        android:max="10"
                        android:progress="5"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    >
                <TextView
                        android:id="@+id/textSeekBar2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_zoom"
                        android:textSize="16dp"
                        android:gravity="center"

                        />
                <SeekBar
                        android:id="@+id/seekBar2"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:minHeight="140dp"
                        android:maxHeight="140dp"
                        android:layout_width="match_parent"
                        android:max="10"
                        android:progress="5"
                        />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.3">
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                >
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                   >
                <ImageView
                        android:contentDescription="@string/image_description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|bottom"
                        android:id="@+id/imageView"
                        android:src="@drawable/controller"

                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- The navigation drawer -->
    <ListView
            android:id="@+id/left_drawer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:choiceMode="singleChoice"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:background="#FFF"
            tools:listitem="@layout/drawer_list_item"/>


</android.support.v4.widget.DrawerLayout>